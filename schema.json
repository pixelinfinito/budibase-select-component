{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "select-component",
    "friendlyName": "Select Component",
    "description": "Budibase Select Component, developed with the Svelte Select library, introduces a robust and intuitive Select component to your Budibase applications. Designed with user experience in mind, this plugin ensures smooth interaction and seamless data integration.",
    "icon": "Dropdown",
    "settings": [
      {
        "type": "dataProvider",
        "label": "DataProvider",
        "key": "dataProvider",
        "required": true
      },
      {
        "type": "text",
        "key": "placeholder",
        "label": "Placeholder",
        "defaultValue": "Selecionar opções"
      },
      {
        "type": "text",
        "key": "label",
        "label": "Label column name"
      },
      {
        "type": "text",
        "key": "defaultValue",
        "label": "Default value"
      },
      {
        "type": "boolean",
        "key": "multiple",
        "label": "Multiple",
        "defaultValue": false
      },
      
      {
        "type": "boolean",
        "key": "disable",
        "label": "Is Disabled",
        "defaultValue": false 
      },
      {
        "type": "boolean",
        "key": "placeholderAlwaysShow",
        "label": "Keep showing label on multiselect",
        "defaultValue": false 
      },
      {
        "type": "event",
        "label": "On Change",
        "key": "selectEvent",
        "context": [
          {
            "label": "Selected Item",
            "key": "data",
            "type": "object"
          }
        ]
      },
      {
        "type": "event",
        "label": "On Clear select",
        "key": "onClear",
        "context": [
          {
            "label": "Item removed",
            "key": "data",
            "type": "object"
          }
        ]
      }
    ]
  }
}